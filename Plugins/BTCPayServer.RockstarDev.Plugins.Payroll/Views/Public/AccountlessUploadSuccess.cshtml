@model AccountlessUploadViewModel
@{
    Layout = "Views/Public/_VendorPayPublicLayout";
    ViewData["Title"] = "Invoice Uploaded Successfully";
}

<div id="FormView" class="public-page-wrap" style="--wrap-max-width: 576px;">
    <div class="d-flex flex-column justify-content-center gap-4">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="text-success" viewBox="0 0 16 16">
                            <path
                                d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </div>
                    <h2 class="mb-3">Invoice Uploaded Successfully!</h2>
                    <p class="text-muted mb-4">
                        Your invoice has been submitted and is awaiting approval.
                        @if (Model.EmailNotificationsEnabled)
                        {
                            <text>You will be notified at <strong>@Model.Email</strong> once it has been processed.</text>
                        }
                    </p>
                    <div class="alert alert-info text-start">
                        <h5>Invoice Details:</h5>
                        <ul class="mb-0">
                            <li><strong>Name:</strong> @Model.Name</li>
                            <li><strong>Email:</strong> @Model.Email</li>
                            <li><strong>Amount:</strong> @Model.Amount @Model.Currency</li>
                            <li><strong>Destination:</strong> @Model.Destination</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="store-footer">
        <a class="store-powered-by" href="https://btcpayserver.org" target="_blank" rel="noreferrer noopener">
            Powered by
            <partial name="_StoreFooterLogo" />
        </a>
    </footer>
</div>
