@using BTCPayServer.Abstractions.Models
@model BaseVendorPayPublicViewModel
@{
    Layout = "Views/Public/_VendorPayPublicLayout";
    ViewData["Title"] = "Invalid Upload Link";
}

<div class="public-page-wrap">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h2 class="mb-4">@ViewData["Title"]</h2>
                        <div class="alert alert-warning" role="alert">
                            <i class="fa fa-exclamation-triangle fa-3x mb-3"></i>
                            <p class="mb-0">
                                This upload link is invalid or has expired. Please contact your administrator for the current upload link.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
