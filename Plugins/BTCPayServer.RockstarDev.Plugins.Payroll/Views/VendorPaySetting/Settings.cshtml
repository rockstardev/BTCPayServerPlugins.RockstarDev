@using BTCPayServer.Abstractions.Contracts
@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Abstractions.Models
@using BTCPayServer.RockstarDev.Plugins.VendorPay.Views
@model VendorPaySettingViewModel
@inject IScopeProvider ScopeProvider
@{
    var storeId = ScopeProvider.GetCurrentStoreId();
    Layout = "_Layout";
    ViewData.SetLayoutModel(new LayoutModel(nameof(VendorPayNavPages.VendorPaySettings), "Vendor Pay Settings")
        { ActiveCategory = nameof(VendorPayNavPages) });
    var storeEmailSettingsConfigured = (bool)ViewData["StoreEmailSettingsConfigured"];
}

<form method="post" asp-action="Settings" asp-controller="VendorPaySetting">
    <div class="sticky-header d-flex align-items-center justify-content-between">
        <h2>@ViewData["Title"]</h2>
        <button type="submit" class="btn btn-primary" id="Edit" value="Save Changes">Save Changes</button>
    </div>

    <partial name="_StatusMessage" />

    <div class="row">
        <div class="col-xl-10 col-xxl-constrain">
            <div class="form-group d-flex align-items-center">
                <input asp-for="MakeInvoiceFileOptional" type="checkbox" class="btcpay-toggle me-3" />
                <label asp-for="MakeInvoiceFileOptional" class="form-label mb-0 me-1"></label>
                <span asp-validation-for="MakeInvoiceFileOptional" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center">
                <input asp-for="PurchaseOrdersRequired" type="checkbox" class="btcpay-toggle me-3" />
                <label asp-for="PurchaseOrdersRequired" class="form-label mb-0 me-1"></label>
                <span asp-validation-for="PurchaseOrdersRequired" class="text-danger"></span>
            </div>

            <div class="form-group d-flex align-items-center">
                <input asp-for="InvoiceFiatConversionAdjustment" type="checkbox" class="btcpay-toggle me-3" data-bs-toggle="collapse"
                       data-bs-target="#spreadInput">
                <label asp-for="InvoiceFiatConversionAdjustment" class="form-label mb-0 me-1"></label>
            </div>

            <div class="collapse @(Model.InvoiceFiatConversionAdjustment ? "show" : "")" id="spreadInput">
                <div class="form-group">
                    <label asp-for="InvoiceFiatConversionAdjustmentPercentage" class="form-label"></label>
                    <div class="input-group">
                        <input inputmode="decimal" asp-for="InvoiceFiatConversionAdjustmentPercentage" class="form-control" />
                        <span class="input-group-text">%</span>
                    </div>
                    <span asp-validation-for="InvoiceFiatConversionAdjustmentPercentage" class="text-danger"></span>
                    <div class="text-secondary">
                        <span text-translate="true">Add (positive %) or reduce (negative %) to the final BTC amount after fiat conversion.</span>
                    </div>
                </div>
            </div>

            <h3>Accountless Upload</h3>
            <div class="form-group d-flex align-items-center">
                <input asp-for="AccountlessUploadEnabled" type="checkbox" class="btcpay-toggle me-3" id="accountlessUploadToggle" />
                <label asp-for="AccountlessUploadEnabled" class="form-label mb-0 me-1"></label>
                <span asp-validation-for="AccountlessUploadEnabled" class="text-danger"></span>
            </div>
            <div id="accountlessUploadGroup" style="display: none;">
                <div class="form-group">
                    <label asp-for="UploadCode" class="form-label"></label>
                    <input asp-for="UploadCode" type="text" class="form-control" />
                    <span asp-validation-for="UploadCode" class="text-danger"></span>
                    <small class="form-text text-muted">This code will be required for accountless uploads</small>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionTitle" class="form-label"></label>
                    <input asp-for="DescriptionTitle" type="text" class="form-control"
                           placeholder="Description" />
                    <span asp-validation-for="DescriptionTitle" class="text-danger"></span>
                    <small class="form-text text-muted">Change the title of description field. Can be used to ask questions during invoice uploading. If filled, description becomes a required field.</small>
                </div>
                <div class="form-group d-flex align-items-center">
                    <input asp-for="AllowOneTimeAccountConversion" type="checkbox" class="btcpay-toggle me-3" />
                    <div>
                        <label asp-for="AllowOneTimeAccountConversion" class="form-label mb-0 me-1"></label>
                        <span asp-validation-for="AllowOneTimeAccountConversion" class="text-danger"></span>
                        <div class="text-secondary">
                            <small>When enabled, one-time users will receive an email invitation to create a full account to track their invoice status</small>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Accountless Upload Link</label>
                    <div class="input-group">
                        @{
                            var uploadHash = "";
                            if (!string.IsNullOrEmpty(Model.UploadCode))
                            {
                                var input = storeId + Model.UploadCode;
                                var hashBytes = System.Security.Cryptography.SHA256.HashData(System.Text.Encoding.UTF8.GetBytes(input));
                                var hashString = Convert.ToHexString(hashBytes).ToLowerInvariant();
                                uploadHash = hashString.Substring(0, 12);
                            }
                            var uploadUrl = !string.IsNullOrEmpty(uploadHash)
                                ? Url.Action("AccountlessUpload", "Public", new { storeId, hash = uploadHash }, Context.Request.Scheme)
                                : "";
                        }
                        <input type="text" class="form-control" id="accountlessUploadLink" readonly
                               value="@uploadUrl" />
                        <button type="button" class="btn btn-secondary" onclick="copyAccountlessLink()">
                            <i class="fa fa-copy"></i> Copy
                        </button>
                    </div>
                    <small class="form-text text-muted">Share this link with users who need to upload invoices without an account</small>
                </div>
            </div>

            <h3>Emails</h3>
            <div class="form-group d-flex align-items-center">

                <input asp-for="EmailOnInvoicePaid" type="checkbox" class="btcpay-toggle me-3" id="emailToggle"
                       disabled="@(storeEmailSettingsConfigured ? null : "disabled")" />
                <div>
                    <label asp-for="EmailOnInvoicePaid" class="form-check-label"></label>
                    <span asp-validation-for="EmailOnInvoicePaid" class="text-danger"></span>
                    @if (!storeEmailSettingsConfigured)
                    {
                        <div class="text-secondary">
                            <span text-translate="true">Your email server has not been configured.</span>
                            <a asp-controller="UIStores" asp-action="StoreEmailSettings" text-translate="true" asp-route-storeId="@storeId">Please configure it
                                first.</a>
                        </div>
                    }
                </div>
            </div>
            <div id="emailTemplateGroup" style="display: none;">
                <div class="form-group">
                    <label asp-for="EmailOnInvoicePaidSubject" class="form-label">Subject</label>
                    <input asp-for="EmailOnInvoicePaidSubject" class="form-control" />
                    <span asp-validation-for="EmailOnInvoicePaidSubject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailOnInvoicePaidBody" class="form-label">Email Body</label>
                    <textarea asp-for="EmailOnInvoicePaidBody" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="EmailOnInvoicePaidBody" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group d-flex align-items-center">

                <input asp-for="EmailReminders" type="checkbox" class="btcpay-toggle me-3" id="emailReminderToggle"
                       disabled="@(storeEmailSettingsConfigured ? null : "disabled")" />
                <div>
                    <label asp-for="EmailReminders" class="form-check-label"></label>
                    <span asp-validation-for="EmailReminders" class="text-danger"></span>
                    @if (!storeEmailSettingsConfigured)
                    {
                        <div class="text-secondary">
                            <span text-translate="true">Your email server has not been configured.</span>
                            <a asp-controller="UIStores" asp-action="StoreEmailSettings" text-translate="true" asp-route-storeId="@storeId">Please configure it
                                first.</a>
                        </div>
                    }
                </div>
            </div>

            <div id="emailReminderTemplateGroup" style="display: none;">
                <div class="form-group">
                    <label asp-for="EmailRemindersSubject" class="form-label">Subject</label>
                    <input asp-for="EmailRemindersSubject" class="form-control" />
                    <span asp-validation-for="EmailRemindersSubject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailRemindersBody" class="form-label">Email Body</label>
                    <textarea asp-for="EmailRemindersBody" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="EmailRemindersBody" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex align-items-center">
                <input asp-for="EmailAdminOnInvoiceUploaded" type="checkbox" class="btcpay-toggle me-3" id="emailAdminUploadToggle"
                       disabled="@(storeEmailSettingsConfigured ? null : "disabled")" />
                <div>
                    <label asp-for="EmailAdminOnInvoiceUploaded" class="form-check-label"></label>
                    <span asp-validation-for="EmailAdminOnInvoiceUploaded" class="text-danger"></span>
                    @if (!storeEmailSettingsConfigured)
                    {
                        <div class="text-secondary">
                            <span text-translate="true">Your email server has not been configured.</span>
                            <a asp-controller="UIStores" asp-action="StoreEmailSettings" text-translate="true" asp-route-storeId="@storeId">Please configure it
                                first.</a>
                        </div>
                    }
                </div>
            </div>
            <div id="emailAdminUploadGroup" style="display: none;">
                <div class="form-group">
                    <label asp-for="EmailAdminOnInvoiceUploadedAddress" class="form-label"></label>
                    <input asp-for="EmailAdminOnInvoiceUploadedAddress" type="text" class="form-control"
                           placeholder="admin@example.com, admin2@example.com"
                           autocomplete="email" />
                    <small class="form-text text-muted">Comma-separated list of email addresses</small>
                    <span asp-validation-for="EmailAdminOnInvoiceUploadedAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailAdminOnInvoiceUploadedSubject" class="form-label">Subject</label>
                    <input asp-for="EmailAdminOnInvoiceUploadedSubject" class="form-control" />
                    <span asp-validation-for="EmailAdminOnInvoiceUploadedSubject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailAdminOnInvoiceUploadedBody" class="form-label">Email Body</label>
                    <textarea asp-for="EmailAdminOnInvoiceUploadedBody" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="EmailAdminOnInvoiceUploadedBody" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group d-flex align-items-center">
                <input asp-for="EmailAdminOnInvoiceDeleted" type="checkbox" class="btcpay-toggle me-3" id="emailAdminDeleteToggle"
                       disabled="@(storeEmailSettingsConfigured ? null : "disabled")" />
                <div>
                    <label asp-for="EmailAdminOnInvoiceDeleted" class="form-check-label"></label>
                    <span asp-validation-for="EmailAdminOnInvoiceDeleted" class="text-danger"></span>
                    @if (!storeEmailSettingsConfigured)
                    {
                        <div class="text-secondary">
                            <span text-translate="true">Your email server has not been configured.</span>
                            <a asp-controller="UIStores" asp-action="StoreEmailSettings" text-translate="true" asp-route-storeId="@storeId">Please configure it
                                first.</a>
                        </div>
                    }
                </div>
            </div>
            <div id="emailAdminDeleteGroup" style="display: none;">
                <div class="form-group">
                    <label asp-for="EmailAdminOnInvoiceDeletedAddress" class="form-label"></label>
                    <input asp-for="EmailAdminOnInvoiceDeletedAddress" type="text" class="form-control"
                           placeholder="admin@example.com, admin2@example.com"
                           autocomplete="email" />
                    <small class="form-text text-muted">Comma-separated list of email addresses</small>
                    <span asp-validation-for="EmailAdminOnInvoiceDeletedAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailAdminOnInvoiceDeletedSubject" class="form-label">Subject</label>
                    <input asp-for="EmailAdminOnInvoiceDeletedSubject" class="form-control" />
                    <span asp-validation-for="EmailAdminOnInvoiceDeletedSubject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailAdminOnInvoiceDeletedBody" class="form-label">Email Body</label>
                    <textarea asp-for="EmailAdminOnInvoiceDeletedBody" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="EmailAdminOnInvoiceDeletedBody" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>


@section PageFootContent {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleElements = [
                {toggle: 'emailToggle', target: 'emailTemplateGroup'},
                {toggle: 'emailReminderToggle', target: 'emailReminderTemplateGroup'},
                {toggle: 'emailAdminUploadToggle', target: 'emailAdminUploadGroup'},
                {toggle: 'emailAdminDeleteToggle', target: 'emailAdminDeleteGroup'},
                {toggle: 'accountlessUploadToggle', target: 'accountlessUploadGroup'}
            ];

            const toggleVisibility = (toggle, target) => {
                document.getElementById(target).style.display = document.getElementById(toggle).checked ? 'block' : 'none';
            };

            toggleElements.forEach(({toggle, target}) => {
                const toggleInput = document.getElementById(toggle);
                toggleInput.addEventListener('change', () => toggleVisibility(toggle, target));
                toggleVisibility(toggle, target);
            });
        });

        function copyAccountlessLink() {
            const linkInput = document.getElementById('accountlessUploadLink');
            linkInput.select();
            linkInput.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(linkInput.value).then(() => {
                const btn = event.target.closest('button');
                const originalHtml = btn.innerHTML;
                btn.innerHTML = '<i class="fa fa-check"></i> Copied!';
                setTimeout(() => {
                    btn.innerHTML = originalHtml;
                }, 2000);
            });
        }
    </script>
}
