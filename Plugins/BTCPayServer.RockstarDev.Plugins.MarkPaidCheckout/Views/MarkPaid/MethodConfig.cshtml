@using BTCPayServer.Abstractions.Extensions
@model BTCPayServer.RockstarDev.Plugins.MarkPaidCheckout.Controllers.MarkPaidStoreController.MethodConfigVm
@{
    ViewData.SetActivePage(MarkPaidCheckoutPlugin.PluginNavKey, $"{Model.Method} - MarkPaid", "MethodConfig");
}

<form method="post" asp-action="MethodConfig" asp-route-method="@Model.Method">
    <div class="sticky-header d-flex align-items-center justify-content-between">
        <h2>@ViewData["Title"]</h2>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-xl-10 col-xxl-constrain">
            <div class="form-group my-4">
                <div class="d-flex align-items-center">
                    <input asp-for="Enabled" type="checkbox" id="Enabled" class="btcpay-toggle me-3">
                    <label class="form-check-label" for="Enabled">Enabled</label>
                </div>
                <div class="form-text">Enabling this toggle will provide @Model.Method payment method with MarkPaid button on checkout.</div>
            </div>
        </div>
    </div>

</form>
