@using BTCPayServer.Abstractions.Extensions
@model BTCPayServer.RockstarDev.Plugins.MarkPaidCheckout.Server.MarkPaidSettings
@{
    ViewData.SetActivePage(MarkPaidCheckoutPlugin.PluginNavKey, "MarkPaid â€“ Server Settings", "Index");
}

<form method="post" asp-action="Index">
    <div class="sticky-header-setup"></div>
    <div class="sticky-header d-flex align-items-center justify-content-between">
        <h2>@ViewData["Title"]</h2>
        <button type="submit" class="btn btn-primary" id="Submit" value="Submit">Save</button>
    </div>

    @if (TempData["RestartRequired"] as string == "1")
    {
        <div class="alert alert-info d-flex align-items-center justify-content-between">
            <span text-translate="true">You need to restart BTCPay Server in order to apply your MarkPaid settings.</span>
            <button type="submit" form="RestartForm" class="btn btn-info" text-translate="true">Restart now</button>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <strong>Heads up:</strong> Changing these settings requires a server restart to take effect.
        </div>
    }

    <partial name="_StatusMessage" />
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-xl-8 col-xxl-constrain">
            <div class="form-group">
                <label class="form-label" for="MethodsCsv">Methods (comma-separated)</label>
                <input asp-for="MethodsCsv" class="form-control" placeholder="CASH,CREDIT,FLASH" />
                <span asp-validation-for="MethodsCsv" class="text-danger"></span>
                <br />
                <p>
                    Each item in the comma-separated list creates a new payment method. That method will mark payments as settled and provide that specific method as a source of payment.
                    <br />
                    <b>Example:</b> if you're running a conference and accept both cash and credit cards, enter: CASH,CREDIT
                    <br />
                    This way, one payment method records cash and the other credit card transactions.
                </p>
            </div>
        </div>
    </div>
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
</form>

<!-- Separate form for requesting a soft restart (must not be nested) -->
<form id="RestartForm" method="post" asp-controller="UIServer" asp-action="Maintenance" class="d-none">
    @Html.AntiForgeryToken()
    <input type="hidden" name="command" value="soft-restart" />
</form>
