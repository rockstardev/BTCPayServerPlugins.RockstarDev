@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.RockstarDev.Plugins.CashCheckout
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BTCPayServer.RockstarDev.Plugins.CashCheckout.ViewModels.CashStoreViewModel
@{
    ViewData.SetActivePage(CashCheckoutPlugin.PluginNavKey, "Cash Configuration", "Configuration");
}

<form method="post">
    <div class="sticky-header d-flex align-items-center justify-content-between">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <button type="submit" class="btn btn-primary" id="Submit" value="Submit">Submit</button>
    </div>

    <partial name="_StatusMessage" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group my-4">
                <div class="d-flex align-items-center">
                    <input asp-for="Enabled" type="checkbox" class="btcpay-toggle me-3" />
                    <label asp-for="Enabled" class="form-check-label"></label>
                </div>
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
