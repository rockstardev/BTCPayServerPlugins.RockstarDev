@using BTCPayServer.Abstractions.Contracts
@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.RockstarDev.Plugins.WalletSweeper.ViewModels
@model ConfigurationViewModel
@inject IScopeProvider ScopeProvider
@{
    var storeId = ScopeProvider.GetCurrentStoreId();
    var hasWallet = ViewBag.HasWallet as bool? ?? false;
    ViewData.SetActivePage("WalletSweeper", "Configure Wallet Sweeper", "WalletSweeper");
}

<div class="sticky-header-setup"></div>
<div class="sticky-header d-sm-flex align-items-center justify-content-between">
    <div>
        <h2 class="my-1">
            <a asp-action="Index" asp-route-storeId="@storeId" class="text-muted me-2">
                <i class="fa fa-arrow-left"></i>
            </a>
            @ViewData["Title"]
        </h2>
    </div>
    <div class="d-flex gap-3 mt-3 mt-sm-0">
        <button type="submit" form="ConfigForm" class="btn btn-primary">
            <i class="fa fa-save"></i> Save Configuration
        </button>
    </div>
</div>

<partial name="_StatusMessage" />

<div class="row">
    <div class="col-xxl-constrain col-xl-8">

        @if (!hasWallet)
        {
            <!-- No Wallet Configured -->
            <div class="alert alert-danger">
                <h5><i class="fa fa-exclamation-triangle"></i> Bitcoin Wallet Not Configured</h5>
                <p class="mb-2">To configure Wallet Sweeper, you need to set up a Bitcoin wallet for this store first.</p>
                <p class="mb-0">
                    <a asp-controller="UIStores" asp-action="SetupWallet" asp-route-storeId="@storeId" asp-route-cryptoCode="BTC" class="btn btn-danger">
                        <i class="fa fa-wallet"></i> Set Up Bitcoin Wallet
                    </a>
                </p>
            </div>
        }
        else
        {
        <form id="ConfigForm" method="post" asp-action="Save" asp-route-storeId="@storeId">
            
            <!-- Enable/Disable -->
            <div class="form-group mb-4">
                <div class="form-check">
                    <input asp-for="Enabled" type="checkbox" class="form-check-input" />
                    <label asp-for="Enabled" class="form-check-label"></label>
                    <span class="text-muted ms-2">Enable automatic sweeping</span>
                </div>
            </div>

            <!-- Destination Configuration -->
            <h4 class="mb-3">Destination</h4>
            
            <div class="form-group mb-4">
                <label asp-for="DestinationAddress" class="form-label"></label>
                <input asp-for="DestinationAddress" class="form-control" placeholder="bc1q..." />
                <span asp-validation-for="DestinationAddress" class="text-danger"></span>
                <small class="form-text text-muted">Enter a valid Bitcoin address where funds will be swept</small>
            </div>

            <!-- Balance Thresholds -->
            <h4 class="mb-3 mt-4">Balance Thresholds</h4>
            
            <div class="form-group mb-3">
                <label asp-for="MinimumBalance" class="form-label"></label>
                <input asp-for="MinimumBalance" type="number" step="0.00000001" class="form-control" />
                <span asp-validation-for="MinimumBalance" class="text-danger"></span>
                <small class="form-text text-muted">Don't sweep if balance is below this amount</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaximumBalance" class="form-label"></label>
                <input asp-for="MaximumBalance" type="number" step="0.00000001" class="form-control" />
                <span asp-validation-for="MaximumBalance" class="text-danger"></span>
                <small class="form-text text-muted">Sweep immediately if balance exceeds this amount</small>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ReserveAmount" class="form-label"></label>
                <input asp-for="ReserveAmount" type="number" step="0.00000001" class="form-control" />
                <span asp-validation-for="ReserveAmount" class="text-danger"></span>
                <small class="form-text text-muted">Always keep this amount in the source wallet</small>
            </div>

            <!-- Schedule -->
            <h4 class="mb-3 mt-4">Schedule</h4>
            
            <div class="form-group mb-3">
                <label asp-for="IntervalDays" class="form-label"></label>
                <input asp-for="IntervalDays" type="number" min="1" max="365" class="form-control" />
                <span asp-validation-for="IntervalDays" class="text-danger"></span>
                <small class="form-text text-muted">How often to check and sweep (in days)</small>
            </div>

            <!-- Fee Settings -->
            <h4 class="mb-3 mt-4">Fee Settings</h4>
            
            <div class="form-group mb-4">
                <label asp-for="FeeRate" class="form-label"></label>
                <select asp-for="FeeRate" asp-items="Model.FeeRateOptions" class="form-select"></select>
                <span asp-validation-for="FeeRate" class="text-danger"></span>
            </div>

            <!-- Wallet Type Information -->
            <h4 class="mb-3 mt-4">Wallet Information</h4>
            
            @if (Model.IsHotWallet)
            {
                <div class="alert alert-success">
                    <h5><i class="fa fa-check-circle"></i> Hot Wallet Detected</h5>
                    <p class="mb-0">
                        Your wallet is configured as a hot wallet. Automatic sweeping will work seamlessly 
                        as BTCPay Server has access to the private keys.
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h5><i class="fa fa-exclamation-triangle"></i> Cold Wallet Detected</h5>
                    <p class="mb-2">
                        Your wallet is configured as a cold wallet. To enable automatic sweeping, you need to provide 
                        the seed phrase so the plugin can sign transactions.
                    </p>
                    <p class="mb-0">
                        <strong>⚠️ Security Notice:</strong> The seed phrase will be stored encrypted in the database, 
                        but this is not as secure as a hardware wallet. Use at your own risk and only for wallets 
                        with small amounts.
                    </p>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SeedPhrase" class="form-label"></label>
                    <div class="input-group">
                        @{
                            var seedInputType = Model.ShowSeedPhrase ? "text" : "password";
                            var seedDisabled = Model.HasEncryptedSeed && !Model.ShowSeedPhrase;
                        }
                        <input asp-for="SeedPhrase" type="@seedInputType" class="form-control" 
                               placeholder="word1 word2 word3 ..." 
                               disabled="@seedDisabled" />
                        @if (Model.ShowSeedPhrase)
                        {
                            <button type="button" class="btn btn-secondary" id="ToggleSeedBtn">
                                <i class="fa fa-eye-slash"></i>
                            </button>
                        }
                        else if (Model.HasEncryptedSeed)
                        {
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#decryptSeedModal">
                                <i class="fa fa-unlock"></i> Decrypt
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-secondary" id="ToggleSeedBtn">
                                <i class="fa fa-eye"></i>
                            </button>
                        }
                    </div>
                    <span asp-validation-for="SeedPhrase" class="text-danger"></span>
                    @if (Model.HasEncryptedSeed && !Model.ShowSeedPhrase)
                    {
                        <small class="form-text text-success">
                            <i class="fa fa-lock"></i> Seed phrase is encrypted and stored securely. 
                            Click "Decrypt" to view or edit.
                        </small>
                    }
                    else if (Model.ShowSeedPhrase)
                    {
                        <small class="form-text text-warning">
                            <i class="fa fa-exclamation-triangle"></i> Seed phrase is now visible. 
                            You can edit it and save to re-encrypt.
                        </small>
                    }
                </div>

                <div class="form-group mb-4">
                    <label asp-for="SeedPassphrase" class="form-label"></label>
                    <input asp-for="SeedPassphrase" type="password" class="form-control" 
                           placeholder="Encryption passphrase" />
                    <span asp-validation-for="SeedPassphrase" class="text-danger"></span>
                    <small class="form-text text-muted">
                        @if (Model.HasEncryptedSeed)
                        {
                            <text>Password hint: @Model.SeedPassphrase</text>
                        }
                        else
                        {
                            <text>Choose a strong password to encrypt the seed phrase</text>
                        }
                    </small>
                </div>
            }

        </form>
        }

    </div>
</div>

<!-- Decrypt Seed Modal -->
<div class="modal fade" id="decryptSeedModal" tabindex="-1" aria-labelledby="decryptSeedModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="DecryptSeed" asp-route-storeId="@storeId">
                <div class="modal-header">
                    <h5 class="modal-title" id="decryptSeedModalLabel">
                        <i class="fa fa-unlock"></i> Decrypt Seed Phrase
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i> Enter your encryption password to decrypt and view the seed phrase.
                    </div>
                    <div class="form-group">
                        <label for="decryptPassword" class="form-label">Encryption Password</label>
                        <input type="password" class="form-control" id="decryptPassword" name="password" 
                               placeholder="Enter password" required autofocus />
                        @if (!string.IsNullOrEmpty(Model.SeedPassphrase))
                        {
                            <small class="form-text text-muted">Hint: @Model.SeedPassphrase</small>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-unlock"></i> Decrypt & View
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section PageFootContent {
    <script>
        // Toggle seed phrase visibility
        const toggleBtn = document.getElementById('ToggleSeedBtn');
        if (toggleBtn) {
            toggleBtn.addEventListener('click', function() {
                const input = document.querySelector('input[name="SeedPhrase"]');
                const icon = this.querySelector('i');
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        }
    </script>
}
