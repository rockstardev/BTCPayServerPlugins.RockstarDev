@using BTCPayServer.Abstractions.Contracts
@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.RockstarDev.Plugins.WalletSweeper.ViewModels
@inject IScopeProvider ScopeProvider
@model CreateConfigurationViewModel
@{
    Layout = "_Layout";
    var storeId = ScopeProvider.GetCurrentStoreId();
    ViewData.SetActivePage("WalletSweeper", "Add Configuration", "WalletSweeper");
}

<div class="sticky-header-setup"></div>
<div class="sticky-header d-sm-flex align-items-center justify-content-between">
    <div>
        <h2 class="my-1">
            <a asp-action="Index" asp-route-storeId="@storeId" class="text-muted me-2">
                <i class="fa fa-arrow-left"></i>
            </a>
            @ViewData["Title"]
        </h2>
    </div>
    <div class="d-flex gap-3 mt-3 mt-sm-0">
        <button type="submit" form="ConfigForm" class="btn btn-primary">
            <i class="fa fa-save"></i> Create
        </button>
    </div>
</div>

<partial name="_StatusMessage" />

<div class="row">
    <div class="col-xxl-constrain col-xl-8">
        <form id="ConfigForm" method="post" asp-action="Create" asp-route-storeId="@storeId">
            
            <!-- Basic Info -->
            <h4 class="mb-3">Basic Information</h4>
            
            <div class="form-group mb-3">
                <label asp-for="ConfigName" class="form-label"></label>
                <input asp-for="ConfigName" class="form-control" placeholder="e.g., Exchange Wallet, Store A" />
                <span asp-validation-for="ConfigName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="2" placeholder="Optional description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-4">
                <input asp-for="Enabled" type="checkbox" class="form-check-input" />
                <label asp-for="Enabled" class="form-check-label"></label>
            </div>
            
            <!-- Wallet Configuration -->
            <h4 class="mb-3 mt-4">External Wallet Configuration</h4>
            
            <div class="form-group mb-3">
                <label asp-for="SeedPhrase" class="form-label"></label>
                <textarea asp-for="SeedPhrase" class="form-control" rows="3" 
                          placeholder="word1 word2 word3 ..."></textarea>
                <span asp-validation-for="SeedPhrase" class="text-danger"></span>
                <small class="form-text text-muted">12 or 24 word BIP39 mnemonic</small>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="SeedPassword" class="form-label"></label>
                <input asp-for="SeedPassword" type="password" class="form-control" />
                <span asp-validation-for="SeedPassword" class="text-danger"></span>
                <small class="form-text text-muted">Password to encrypt the seed phrase (minimum 4 characters)</small>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="SeedPasswordConfirm" class="form-label"></label>
                <input asp-for="SeedPasswordConfirm" type="password" class="form-control" />
                <span asp-validation-for="SeedPasswordConfirm" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="DerivationPath" class="form-label"></label>
                <input asp-for="DerivationPath" class="form-control" placeholder="m/84'/1'/0'" />
                <span asp-validation-for="DerivationPath" class="text-danger"></span>
                <small class="form-text text-muted">BIP32 derivation path (e.g., m/84'/1'/0' for native SegWit testnet)</small>
            </div>
            
            <div class="form-group mb-4">
                <label asp-for="AddressGapLimit" class="form-label"></label>
                <input asp-for="AddressGapLimit" type="number" class="form-control" />
                <span asp-validation-for="AddressGapLimit" class="text-danger"></span>
                <small class="form-text text-muted">Number of consecutive unused addresses to check</small>
            </div>
            
            <!-- Balance Thresholds -->
            <h4 class="mb-3 mt-4">Balance Thresholds</h4>
            
            <div class="form-group mb-3">
                <label asp-for="MinimumBalance" class="form-label"></label>
                <input asp-for="MinimumBalance" type="number" step="0.00000001" class="form-control" />
                <span asp-validation-for="MinimumBalance" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="MaximumBalance" class="form-label"></label>
                <input asp-for="MaximumBalance" type="number" step="0.00000001" class="form-control" />
                <span asp-validation-for="MaximumBalance" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-4">
                <label asp-for="ReserveAmount" class="form-label"></label>
                <input asp-for="ReserveAmount" type="number" step="0.00000001" class="form-control" />
                <span asp-validation-for="ReserveAmount" class="text-danger"></span>
                <small class="form-text text-muted">Amount to keep in wallet (0 = sweep all)</small>
            </div>
            
            <!-- Sweep Settings -->
            <h4 class="mb-3 mt-4">Sweep Settings</h4>
            
            <div class="form-group mb-3">
                <label asp-for="IntervalSeconds" class="form-label"></label>
                <input asp-for="IntervalSeconds" type="number" class="form-control" />
                <span asp-validation-for="IntervalSeconds" class="text-danger"></span>
                <small class="form-text text-muted">How often to check for new funds (seconds)</small>
            </div>
            
            <div class="form-group mb-4">
                <label asp-for="FeeRate" class="form-label"></label>
                <input asp-for="FeeRate" type="number" class="form-control" />
                <span asp-validation-for="FeeRate" class="text-danger"></span>
            </div>
            
            <!-- Destination -->
            <h4 class="mb-3 mt-4">Destination</h4>
            
            <div class="form-group mb-3">
                <label asp-for="DestinationType" class="form-label"></label>
                <select asp-for="DestinationType" class="form-select">
                    <option value="ThisStore">This Store</option>
                    <option value="CustomAddress">Custom Address</option>
                </select>
                <span asp-validation-for="DestinationType" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="DestinationAddress" class="form-label"></label>
                <input asp-for="DestinationAddress" class="form-control" placeholder="Optional: specify custom address" />
                <span asp-validation-for="DestinationAddress" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-4">
                <input asp-for="AutoGenerateLabel" type="checkbox" class="form-check-input" />
                <label asp-for="AutoGenerateLabel" class="form-check-label"></label>
                <small class="form-text text-muted ms-4">Label transactions as "Sweep from [Config Name]"</small>
            </div>
            
        </form>
    </div>
</div>

@section PageFootContent {
    <partial name="_ValidationScriptsPartial"/>
}
