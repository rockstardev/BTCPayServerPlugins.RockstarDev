@inject IScopeProvider ScopeProvider
@using BTCPayServer.Abstractions.Contracts
@using BTCPayServer.Abstractions.Extensions
@model List<BTCPayServer.RockstarDev.Plugins.WalletSweeper.Data.Models.SweepConfiguration>
@{
    Layout = "_Layout";
    var storeId = ScopeProvider.GetCurrentStoreId();
    ViewData.SetActivePage("WalletSweeper", "Wallet Sweeper", "WalletSweeper");
}

<div class="sticky-header-setup"></div>
<div class="sticky-header d-sm-flex align-items-center justify-content-between">
    <h2 class="my-1">@ViewData["Title"]</h2>
    <a asp-action="Create" asp-route-storeId="@storeId" class="btn btn-primary mt-3 mt-sm-0">
        <i class="fa fa-plus"></i> Add Configuration
    </a>
</div>

<partial name="_StatusMessage" />

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Balance</th>
                <th>Fee Target</th>
                <th>Last Monitored</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var config in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-storeId="@storeId" asp-route-id="@config.Id">
                            <strong>@config.ConfigName</strong>
                        </a>
                        @if (!string.IsNullOrEmpty(config.Description))
                        {
                            <br />
                            <small class="text-muted">@config.Description</small>
                        }
                    </td>
                    <td>
                        @if (config.AutoEnabled)
                        {
                            <span class="badge bg-success">Auto Enabled</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Auto Disabled</span>
                        }
                    </td>
                    <td>@config.CurrentBalance.ToString("N8") BTC</td>
                    <td>
                        <span class="text-muted">~@config.FeeBlockTarget blocks</span>
                    </td>
                    <td>
                        @if (config.LastMonitored.HasValue)
                        {
                            @config.LastMonitored.Value.ToBrowserDate()
                        }
                        else
                        {
                            <em>Never</em>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-storeId="@storeId" asp-route-id="@config.Id">
                            Edit
                        </a>
                        <span class="mx-1">-</span>
                        <a href="#" class="text-danger" onclick="return confirmDelete('@config.Id', '@storeId', '@config.ConfigName')">
                            Delete
                        </a>
                        <form id="delete-form-@config.Id" method="post" asp-action="Delete" asp-route-storeId="@storeId" asp-route-id="@config.Id" class="d-none">
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-secondary mt-4">
        There are no active monitoring configurations.
    </p>
}

@section PageFootContent {
    <script>
        function confirmDelete(configId, storeId, configName) {
            if (confirm('Are you sure you want to delete the configuration "' + configName + '"?')) {
                document.getElementById('delete-form-' + configId).submit();
            }
            return false;
        }
    </script>
}
