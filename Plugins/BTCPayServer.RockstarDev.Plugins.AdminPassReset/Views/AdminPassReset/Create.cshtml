@using BTCPayServer.Abstractions.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BTCPayServer.RockstarDev.Plugins.AdminPassReset.Controllers.AdminPassResetController.AdminPassResetViewModel
@{
    ViewData.SetActivePage("AdminPassReset", "Admin Pass Reset Create", "AdminPassReset");
}

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-xl-8 col-xxl-constrain">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-label" data-required></label>
                <input asp-for="Email" class="form-control" placeholder="Email of User to Reset" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" class="btn btn-primary" id="Submit" value="Submit" />
            </div>

            @if (!string.IsNullOrEmpty(Model.CallbackUrl))
            {
                <div class="form-group">
                    <label class="form-label">Reset Link:</label>
                    <div>
                        <a href="@Model.CallbackUrl" style="word-break: break-all" target="_blank">@Model.CallbackUrl</a>
                    </div>
                </div>
            }

        </form>
    </div>
</div>
