@using BTCPayServer.Abstractions.Extensions
@model ReceiveRequestsCreateViewModel
@{
    ViewData.SetActivePage(RockstarStrikeUtilsPlugin.PluginStrikeNavKey, "Create Receive Request", "ReceiveRequests");
}

<form method="post">
    <div class="sticky-header d-flex align-items-center justify-content-between">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <input type="submit" value="Create" class="btn btn-primary" id="Create" />
    </div>

    <partial name="_StatusMessage" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TargetCurrency" class="form-label"></label>
                <select asp-for="TargetCurrency" class="form-control">
                    <option value="USD">USD</option>
                    <option value="EUR">EUR</option>
                    <option value="BTC">BTC</option>
                </select>
                <span asp-validation-for="TargetCurrency" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center">
                <input asp-for="Bolt11" type="checkbox" class="btcpay-toggle me-3" />
                <label asp-for="Bolt11" class="form-label mb-0 me-1"></label>
                <span asp-validation-for="Bolt11" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Bolt12" type="checkbox" class="btcpay-toggle me-3" />
                <label asp-for="Bolt12" class="form-label mb-0 me-1"></label>
                <span asp-validation-for="Bolt12" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Onchain" type="checkbox" class="btcpay-toggle me-3" />
                <label asp-for="Onchain" class="form-label mb-0 me-1"></label>
                <span asp-validation-for="Onchain" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>