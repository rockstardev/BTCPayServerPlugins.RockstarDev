@using BTCPayServer.Abstractions.Contracts
@using BTCPayServer.Abstractions.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ConfigurationViewModel
@inject IScopeProvider ScopeProvider
@{
    var storeId = ScopeProvider.GetCurrentStoreId();
    ViewData.SetActivePage(RockstarStrikeUtilsPlugin.PluginStrikeNavKey, "Rockstar Strike Configuration", "Configuration");
}

<form method="post">
    <div class="sticky-header d-flex align-items-center justify-content-between">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <input type="submit" class="btn btn-primary" id="Submit" asp-route-storeId="@storeId" value="Submit" />
    </div>

    <partial name="_StatusMessage" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="StrikeApiKey" class="form-label"></label>
                <input asp-for="StrikeApiKey" class="form-control" />
                <span asp-validation-for="StrikeApiKey" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
